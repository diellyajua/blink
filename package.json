{
  "name": "functions",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "start": "source '../../deploy/exportlnd.sh' && ts-node src/index.ts",
    "test": "export JEST_JUNIT_OUTPUT_DIR=\"./artifacts\" && jest --ci --reporters=default --reporters=jest-junit --forceExit",
    "watch:cron": "source '../../deploy/exportlnd.sh' && nodemon -e ts -w ./src -x yarn run cron",
    "cron": "source '../../deploy/exportlnd.sh' && ts-node src/cron.ts",
    "watch": "source '../../deploy/exportlnd.sh' && nodemon -e ts -w ./src -x yarn run start",
    "remove-charts": "helm uninstall mongodb && helm uninstall lnd && helm uninstall bitcoind",
    "add-charts": "export LOCAL=true && ./initLocalTest.sh",
    "restart-charts": "yarn run remove-charts && yarn run add-charts",
    "test-local-clean": "yarn run restart-charts && yarn run test-local",
    "test-local": "source exportLocal.sh && yarn jest --runInBand",
    "dev": "nodemon -e ts -w ./src -x yarn run dev-2",
    "dev-2": "source exportLocal.sh && ts-node src/dev.ts",
    "prometheus": "source exportLocal.sh && ts-node src/prometheus.ts"
  },
  "engines": {
    "node": "12"
  },
  "main": "src/index.js",
  "dependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@jest/test-sequencer": "^26.0.1",
    "@types/lodash": "^4.14.155",
    "bitcoin-core": "^3.0.0",
    "ccxt": "^1.26.54",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql-request": "^1.8.2",
    "graphql-shield": "^7.3.0",
    "graphql-yoga": "^1.18.3",
    "jsonwebtoken": "^8.5.1",
    "ln-service": "^49.3.5",
    "lodash": "^4.17.15",
    "medici": "^4.0.1",
    "moment": "^2.24.0",
    "mongoose": "^5.9.10",
    "prom-client": "^12.0.0",
    "twilio": "^3.42.2",
    "validate.js": "^0.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.1",
    "bolt07": "^1.5.0",
    "bolt11": "^1.2.7",
    "jest": "^25.4.0",
    "jest-junit": "^11.0.1",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.9.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3"
  },
  "private": true
}
