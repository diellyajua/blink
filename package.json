{
  "name": "functions",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "start": "source exportLocal.sh && ts-node src/index.ts | pino-pretty -c -l",
    "trigger": "source exportLocal.sh && ts-node src/trigger.ts | pino-pretty -c -l",
    "test": "export JEST_JUNIT_OUTPUT_DIR=\"./artifacts\" && jest --ci --reporters=default --reporters=jest-junit --forceExit",
    "watch": "source exportLocal.sh && nodemon -V -e ts,graphql -w ./src -x yarn run start",
    "watch-trigger": "source exportLocal.sh && nodemon -V -e ts,graphql -w ./src -x yarn trigger",
    "kill-graphql": "kill $(lsof -t -i:4000)",
    "remove-charts": "helm uninstall lnd | helm uninstall mongodb | helm uninstall redis | helm uninstall bitcoind",
    "add-charts": "export LOCAL=true && ./initLocalTest.sh",
    "forward-mongodb": "kubectl port-forward $(kubectl get pods -l app.kubernetes.io/name=mongodb | awk '/mongo/ {print $1}') 27017",
    "restart-charts": "yarn remove-charts || : && yarn run add-charts",
    "use-minikube": "kubectl config use-context minikube",
    "test-local-clean": "yarn use-minikube && yarn run restart-charts && yarn jest --clearCache && yarn run test-local",
    "test-local": "yarn use-minikube && source exportLocal.sh && yarn jest --runInBand $TEST | pino-pretty -c -l",
    "prometheus": "source exportLocal.sh && ts-node src/prometheus.ts",
    "lnd-connection": "source exportLocal.sh && echo $MACAROON | base64 -d > ./macaroon && echo $TLS | base64 -d > ./tls.cert && lncli --network regtest --macaroonpath=./macaroon --tlscertpath=./tls.cert --rpcserver=${LNDIP}:${LNDRPCPORT} getinfo",
    "postman": "yarn node src/postman/newman.ts",
    "update-postman": "curl --location --request GET \"https://api.getpostman.com/collections/2e9d4144-4c26-4b72-b000-ad1e63105f94\" --header \"X-Api-Key: $POSTMANAPIKEY\" > src/postman/graphql.postman_collection.json"
  },
  "engines": {
    "node": "12"
  },
  "main": "src/index.js",
  "dependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@jest/test-sequencer": "^26.0.1",
    "@types/lodash": "^4.14.155",
    "bitcoin-core": "^3.0.0",
    "bluebird": "^3.7.2",
    "bolt11": "^1.2.7",
    "ccxt": "^1.26.54",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "firebase-admin": "^9.1.0",
    "graphql-request": "^1.8.2",
    "graphql-shield": "^7.3.0",
    "graphql-yoga": "^1.18.3",
    "jsonwebtoken": "^8.5.1",
    "ln-service": "^49.3.6",
    "lodash": "^4.17.15",
    "medici": "^4.0.1",
    "moment": "^2.24.0",
    "mongoose": "^5.9.10",
    "pino": "^6.4.1",
    "pino-http": "^5.2.0",
    "prom-client": "^12.0.0",
    "redis": "^3.0.2",
    "redlock": "^4.1.0",
    "twilio": "^3.42.2",
    "validate.js": "^0.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.1",
    "bolt07": "^1.5.0",
    "csv-parser": "^2.3.3",
    "csv-writer": "^1.6.0",
    "jest": "^25.4.0",
    "jest-junit": "^11.0.1",
    "newman": "^5.2.0",
    "pino-pretty": "^4.1.0",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.9.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.1",
    "typescript": "^3.9.7"
  },
  "private": true
}
