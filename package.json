{
  "name": "functions",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "serve-hot-reload-2": "tsc -w",
    "serve-hot-reload": "export GOOGLE_APPLICATION_CREDENTIALS='../keys.json' && source '../../deploy/exportlnd.sh' && firebase serve --only functions",
    "serve": "export GOOGLE_APPLICATION_CREDENTIALS='../keys.json' && source '../../deploy/exportlnd.sh' && npm run build && firebase serve --only functions",
    "shell-hot-reload": "export GOOGLE_APPLICATION_CREDENTIALS='../keys.json' && source '../../deploy/exportlnd.sh' && firebase functions:shell",
    "shell": "export GOOGLE_APPLICATION_CREDENTIALS='../keys.json' && source '../../deploy/exportlnd.sh' && npm run build && firebase functions:shell",
    "ts-node": "export GOOGLE_APPLICATION_CREDENTIALS='../keys.json' && source '../../deploy/exportlnd.sh' && ts-node",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest",
    "test-with-env": "source '../../deploy/exportlnd.sh' && jest",
    "watch": "source '../../deploy/exportlnd.sh' && nodemon -e ts -w ./src -x yarn run watch:serve",
    "watch:serve": "ts-node src/graphql_testing.ts"
  },
  "engines": {
    "node": "10"
  },
  "main": "lib/backend/firebase/functions/src/index.js",
  "dependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "apisauce": "^1.1.1",
    "await-timeout": "^1.1.1",
    "ccxt": "^1.26.54",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "firebase-admin": "^8.10.0",
    "firebase-functions": "^3.6.0",
    "graphql": "^15.0.0",
    "ln-service": "^47.16.0",
    "medici": "^4.0.1",
    "moment": "^2.24.0",
    "mongoose": "^5.9.10",
    "twilio": "^3.42.2",
    "validate.js": "^0.13.1"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.1",
    "bolt07": "^1.5.0",
    "bolt11": "^1.2.7",
    "firebase-functions-test": "^0.2.1",
    "jest": "^25.4.0",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.9.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3"
  },
  "private": true
}
