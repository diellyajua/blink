{
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "rootDirs": ["src"],
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": ["src/**/*"]
}
