{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitReturns": true,
    "noUnusedLocals": false, // FIXME
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "rootDirs": [
      "src"
    ],
    "types": ["jest", "node"],
    "moduleResolution": "node"
  },
  "compileOnSave": true,
  "include": [
    "src/index.ts",
    "src/exporter.ts",
    "src/__tests__/*.ts"
  ]
}
